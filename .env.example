# Backend Environment Variables
# Copy this file to .env for local development
# For production, set these in Vercel dashboard

# Server Port
PORT=4000

# MongoDB Connection String
# Local: mongodb://127.0.0.1:27017/erp
# Production: mongodb+srv://username:password@cluster.mongodb.net/erp?retryWrites=true&w=majority
MONGO_URI=mongodb://127.0.0.1:27017/erp

# JWT Secret (use a strong random string in production)
JWT_SECRET=supersecret_change_me

# Better Auth Secret (use a strong random string in production)
BETTER_AUTH_SECRET=change_me_super_secret

# Better Auth URL (your backend URL)
BETTER_AUTH_URL=http://localhost:4000

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3002
